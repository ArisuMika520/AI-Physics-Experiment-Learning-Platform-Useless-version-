  padding: 24rpx 32rpx;
  backdrop-filter: blur(20rpx);
  position: relative;
}

.footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, #1890ff 50%, transparent 100%);
}

.footer-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  transition: all 0.4s ease;
  transform: translate(-50%, -50%);
}

.btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff 0%, #722ed1 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(24, 144, 255, 0.4);
}

.btn-primary:hover {
  transform: translateY(-2rpx) scale(1.02);
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.5);
}

.btn-primary:active {
  transform: translateY(0) scale(0.98);
}

.btn-secondary {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #666666;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.btn-secondary:hover {
  transform: translateY(-2rpx);
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #333333;
}

.btn-secondary:active {
  transform: translateY(0) scale(0.98);
}

.btn-outline {
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.05) 0%, rgba(114, 46, 209, 0.05) 100%);
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

.btn-outline:hover {
  transform: translateY(-2rpx);
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1) 0%, rgba(114, 46, 209, 0.1) 100%);
  border-color: #722ed1;
  color: #722ed1;
}

.btn-outline:active {
  transform: translateY(0) scale(0.98);
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.15) 0%, rgba(114, 46, 209, 0.15) 100%);
}

.back-home {
  text-align: center;
  position: relative;
}

.btn-back {
  background: transparent;
  color: #999999;
  border: none;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  height: auto;
  line-height: 1;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.btn-back::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(153, 153, 153, 0.1);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  transform: translate(-50%, -50%);
  z-index: -1;
}

.btn-back:active {
  color: #666666;
  transform: scale(0.95);
}

.btn-back:active::before {
  width: 100%;
  height: 100%;
}

