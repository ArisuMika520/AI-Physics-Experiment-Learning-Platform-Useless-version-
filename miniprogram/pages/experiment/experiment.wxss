.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  position: relative;
  opacity: 0;
  transform: translateY(32rpx);
  animation: slideInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

/* 内容进入动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(32rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 段落切换动画 */
.section.fade-in {
  animation: fadeInScale 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: scale(0.95) translateY(24rpx);
  }
  60% {
    opacity: 0.8;
    transform: scale(1.01) translateY(-4rpx);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 内容加载时的渐显效果 */
.section .section-header,
.section .learning-content,
.section .materials-grid,
.section .upload-content {
  opacity: 0;
  transform: translateY(16rpx);
  animation: slideInContent 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.section .section-header { animation-delay: 0.1s; }
.section .learning-content { animation-delay: 0.2s; }
.section .materials-grid { animation-delay: 0.2s; }
.section .upload-content { animation-delay: 0.2s; }

@keyframes slideInContent {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

