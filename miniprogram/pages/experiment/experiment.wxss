/**experiment.wxss**/
page {
  background-color: #f5f7fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 导航头部 */
.nav-header {
  background: transparent;
  padding: 16rpx 24rpx 0 24rpx;
  position: relative;
  overflow: hidden;
}

/* 导航容器 */
.nav-container {
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 滑动指示器 */
.nav-indicator {
  position: absolute;
  top: 8rpx;
  bottom: 8rpx;
  width: calc(25% - 18rpx);
  background: linear-gradient(135deg, #1890ff 0%, #722ed1 100%);
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  z-index: 1;
}

/* 滑动指示器位置动画 */
.nav-indicator-learning {
  left: 8rpx;
  width: calc(25% - 18rpx);
}

.nav-indicator-ai-chat {
  left: calc(25% + 8rpx);
  width: calc(25% - 18rpx);
}

.nav-indicator-simulation {
  left: calc(50% + 8rpx);
  width: calc(25% - 18rpx);
}

.nav-indicator-upload {
  left: calc(75% + 8rpx);
  width: calc(25% - 18rpx);
}

/* 导航标签容器 */
.nav-tabs {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
  gap: 0;
}

/* 单个导航标签 */
.nav-tab {
  flex: 1;
  padding: 20rpx 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 12rpx;
  margin: 4rpx 8rpx;
  position: relative;
  overflow: hidden;
  min-width: 0;
}

/* 分割线容器 */
.nav-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  flex-shrink: 0;
}

/* 分割线样式 */
.divider-line {
  width: 2rpx;
  height: 48rpx;
  background: linear-gradient(180deg, 
    transparent 0%, 
    rgba(24, 144, 255, 0.3) 20%, 
    rgba(24, 144, 255, 0.6) 50%, 
    rgba(24, 144, 255, 0.3) 80%, 
    transparent 100%);
  border-radius: 1rpx;
  position: relative;
  overflow: hidden;
}

/* 分割线光效动画 */
.divider-line::after {
  content: '';
  position: absolute;
  top: -100%;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(180deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.8) 50%, 
    transparent 100%);
  animation: dividerGlow 3s ease-in-out infinite;
}

@keyframes dividerGlow {
  0%, 100% {
    transform: translateY(200%);
    opacity: 0;
  }
  50% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 导航标签内容 */
.nav-tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
  z-index: 3;
  transition: all 0.2s ease;
  padding: 4rpx 0;
}

/* 导航标签图标 */
.nav-tab-icon {
  font-size: 36rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: grayscale(0.7);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 导航标签文字 */
.nav-tab-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 活跃状态样式 */
.nav-tab.active .nav-tab-icon {
  filter: grayscale(0);
  transform: scale(1.1);
}

.nav-tab.active .nav-tab-text {
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

/* 按压反馈效果 */
.nav-tab:active {
  transform: scale(0.95);
}

/* 悬停效果 */
.nav-tab:not(.active):hover .nav-tab-content {
  transform: translateY(-2rpx);
}

.nav-tab:not(.active):hover .nav-tab-icon {
  filter: grayscale(0.3);
  transform: scale(1.05);
}


