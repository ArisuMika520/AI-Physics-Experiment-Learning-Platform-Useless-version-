/**experiment-list.wxss**/
page {
  background-color: #f5f7fa;
  height: 100vh;
}

.scrollarea {
  height: 100vh;
}

.container {
  padding: 32rpx 24rpx;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #1890ff 0%, #722ed1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.category-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #ffffff;
  border-radius: 32rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 0;
  flex-shrink: 0;
}

.category-tab.active {
  background: linear-gradient(135deg, #1890ff 0%, #722ed1 100%);
  border-color: transparent;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.category-tab:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  font-size: 28rpx;
}

.category-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
}

.category-tab.active .category-name {
  color: #ffffff;
}

/* 实验列表 */
.experiment-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 实验卡片样式 */
.experiment-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.experiment-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 图标区域 */
.item-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-emoji {
  font-size: 48rpx;
  filter: grayscale(0);
}

/* 内容区域 */
.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.item-description {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

/* 元信息区域 */
.item-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.tag-text {
  font-weight: 500;
}

.difficulty-easy {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.difficulty-medium {
  background: rgba(250, 173, 20, 0.1);
  color: #faad14;
  border: 1rpx solid rgba(250, 173, 20, 0.3);
}

.difficulty-hard {
  background: rgba(245, 34, 45, 0.1);
  color: #f5222d;
  border: 1rpx solid rgba(245, 34, 45, 0.3);
}

.duration {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.category {
  background: rgba(114, 46, 209, 0.1);
  color: #722ed1;
  border: 1rpx solid rgba(114, 46, 209, 0.3);
}

/* 箭头指示器 */
.item-arrow {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 32rpx;
  color: #cccccc;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999;
}

.empty-icon {
  display: block;
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: #666;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 底部提示 */
.footer {
  text-align: center;
  margin-top: 48rpx;
  padding: 32rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 750px) {
  .category-tabs {
    justify-content: center;
  }
  
  .category-tab {
    padding: 12rpx 20rpx;
  }
  
  .category-name {
    font-size: 24rpx;
  }
  
  .item-icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 16rpx;
  }
  
  .icon-emoji {
    font-size: 40rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
  
  .item-description {
    font-size: 22rpx;
  }
}

@media (max-width: 600px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .category-tabs {
    gap: 12rpx;
  }
  

  
  .item-tags {
    gap: 8rpx;
  }
  
  .tag {
    padding: 6rpx 12rpx;
    font-size: 20rpx;
  }
}